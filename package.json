{
  "name": "innovation",
  "version": "1.0.0",
  "description": "Opportunities platform for students",
  "main": "server.js",
  "scripts": {
    "installs": "yarn install",
    "install": "yarn --cwd front-end install",
    "build": "yarn --cwd front-end run build",
    "start": "node -r esm back-end/src/server.js",
    "server": "nodemon -r esm back-end/src/server.js",
    "client": "yarn --cwd front-end start",
    "test": "CI=true yarn --cwd front-end test",
    "dev": "concurrently \"yarn client\" \"yarn server\""
  },
  "author": "Reece Jackson",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg-promise": "^10.10.2",
    "react-datepicker": "^4.1.1",
    "react-horizontal-scrolling-menu": "^0.7.10",
    "react-s3": "^1.3.1",
    "react-toggle": "^4.1.2",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
